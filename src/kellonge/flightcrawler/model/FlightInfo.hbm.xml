<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="kellonge.flightcrawler.model">
	<class name="FlightInfo" table="FlightInfo">
	       <id name="ID" column="ID" type="int">
            <generator class="native"/>
        </id> 
		<property name="CreateDate" type="timestamp" />
		<property name="FlightDate" type="date" />
		<property name="DataSource" type="string" /> 
		<property name="AheadDay" type="int" />
		<property name="LowPrice" type="big_decimal" /> 
		<property name="PunctualityRate" type="float" /> 
		<property name="AdditionalFee" type="big_decimal" />
		<property name="FlightScheduleID" type="string" />		 
	</class>
</hibernate-mapping>